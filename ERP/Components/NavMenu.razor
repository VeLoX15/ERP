@using System.Runtime.InteropServices

<h3 class="text-center">TABLEBRICKS</h3>

<ul class="menu">
    <li class="sidebar-item">
        <NavLink href="/" class='sidebar-link blazor-link' Match="NavLinkMatch.All">
            <i class="bi bi-speedometer"></i>
            <span>Dashboard</span>
        </NavLink>
    </li>

    <AuthorizeView Roles="@($"{Roles.EDIT_WAREHOUSES}, {Roles.EDIT_STOCKS}, {Roles.EDIT_ARTICLES}, {Roles.EDIT_ORDERS}, {Roles.EDIT_CUSTOMERS}, {Roles.EDIT_USERS}")">
        <Authorized>
            <li class="sidebar-title">Managements</li>
        </Authorized>
    </AuthorizeView>

    <AuthorizeView Roles="@(Roles.EDIT_WAREHOUSES)">
        <Authorized>
            <li class="sidebar-item">
                <NavLink href="/Management/Warehouse" class='sidebar-link blazor-link' Match="NavLinkMatch.All">
                    <i class="bi bi-stack"></i>
                    <span>Warehoues</span>
                </NavLink>
            </li>
        </Authorized>
    </AuthorizeView>

    <AuthorizeView Roles="@(Roles.EDIT_STOCKS)">
        <Authorized>
            <li class="sidebar-item">
                <NavLink href="/Management/Stock" class='sidebar-link blazor-link' Match="NavLinkMatch.All">
                    <i class="bi bi-box-fill"></i>
                    <span>Stocks</span>
                </NavLink>
            </li>
        </Authorized>
    </AuthorizeView>

    <AuthorizeView Roles="@(Roles.EDIT_ARTICLES)">
        <Authorized>
            <li class="sidebar-item">
                <NavLink href="/Management/Article" class='sidebar-link blazor-link' Match="NavLinkMatch.All">
                    <i class="bi bi-archive-fill"></i>
                    <span>Articles</span>
                </NavLink>
            </li>
        </Authorized>
    </AuthorizeView>

    <AuthorizeView Roles="@(Roles.EDIT_ORDERS)">
        <Authorized>
            <li class="sidebar-item">
                <NavLink href="/Management/Order" class='sidebar-link blazor-link' Match="NavLinkMatch.All">
                    <i class="bi bi-cart-fill"></i>
                    <span>Orders</span>
                </NavLink>
            </li>
        </Authorized>
    </AuthorizeView>

    <AuthorizeView Roles="@(Roles.EDIT_CUSTOMERS)">
        <Authorized>
            <li class="sidebar-item">
                <NavLink href="/Management/Customer" class='sidebar-link blazor-link' Match="NavLinkMatch.All">
                    <i class="bi bi-person-vcard-fill"></i>
                    <span>Customers</span>
                </NavLink>
            </li>
        </Authorized>
    </AuthorizeView>

    <AuthorizeView Roles="@(Roles.EDIT_USERS)">
        <Authorized>
            <li class="sidebar-item">
                <NavLink href="/Management/User" class='sidebar-link blazor-link' Match="NavLinkMatch.All">
                    <i class="bi bi-people-fill"></i>
                    <span>Users</span>
                </NavLink>
            </li>
        </Authorized>
    </AuthorizeView>



    <AuthorizeView Roles="@($"{Roles.EDIT_STATISTICS}")">
        <Authorized>
            <li class="sidebar-title">Statistics</li>
        </Authorized>
    </AuthorizeView>

    <AuthorizeView Roles="@(Roles.EDIT_STATISTICS)">
        <Authorized>
            <li class="sidebar-item">
                <NavLink href="/Statistics" class='sidebar-link blazor-link' Match="NavLinkMatch.All">
                    <i class="bi bi-graph-up"></i>
                    <span>Annual balance</span>
                </NavLink>
            </li>
        </Authorized>
    </AuthorizeView>



    <li class="sidebar-title">Account</li>
    <AuthorizeView>
        <Authorized>
            <li class="sidebar-item">
                <NavLink href="/Account/Details" class='sidebar-link blazor-link' Match="NavLinkMatch.All">
                    <i class="bi bi-person-fill"></i>
                    <span>Account</span>
                </NavLink>
            </li>

            <li class="sidebar-item">
                <form method="post" action="/Account/Logout">
                    <button type="submit" class="btn btn-danger btn-block text-left sidebar-link logout-button">
                        <i class="bi bi-box-arrow-right"></i>
                        <span>Logout</span>
                    </button>
                </form>
            </li>
        </Authorized>
        <NotAuthorized>
            <li class="sidebar-item">
                <NavLink href="/Account/Login" class='sidebar-link blazor-link' Match="NavLinkMatch.All">
                    <i class="bi bi-person-fill"></i>
                    <span>Login</span>
                </NavLink>
            </li>
        </NotAuthorized>
    </AuthorizeView>
</ul>

<p class="text-center">
    Ver. @Program.GetVersion()
    <div>@RuntimeInformation.FrameworkDescription / @RuntimeInformation.ProcessArchitecture</div>
</p>