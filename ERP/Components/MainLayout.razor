@inherits LayoutComponentBase
@inject IJSRuntime JSRuntime
@using System.Runtime.InteropServices

<PageTitle>ERP</PageTitle>



<div id="app">
    <div id="sidebar" class="">
        <div class="sidebar-wrapper active">
            <div class="sidebar-header position-relative">
                <div class="d-flex justify-content-between align-items-center">
                    
                    <div role="button" class="sidebar-toggler  x">
                        <span class="sidebar-hide d-xl-none d-block"><i class="fa-solid fa-xmark"></i></span>
                    </div>
                </div>
            </div>
            <div class="sidebar-menu">
                <NavMenu />
            </div>
        </div>
    </div>
    <div id="main">

        <header class="mb-3 d-block d-xl-none">
            <span role="button" class="burger-btn d-block d-xl-none menu-button">
                <i class="fa-solid fa-bars"></i>
            </span>
        </header>

        <div class="page-content">
            <section class="row">
                @Body
            </section>
        </div>

        <footer>
            <div class="footer clearfix mb-0 text-muted">
                <p class="text-right">
                    @DateTime.Now.Year &copy; Tom Sassor
                </p>
            </div>
        </footer>
    </div>
</div>