<EditForm Model="@Input">
    <h3>Edit Article</h3>
    <hr />
    <div class="form-group row">
        <label for="articleNumber" class="col-sm-2 col-form-label">
            First Name
        </label>
        <div class="col-sm-10">
            <InputNumber id="articleNumber" class="form-control" placeholder="Article Number"
                       @bind-Value="Input.ArticleNumber" />
        </div>
    </div>
    <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">
            Last Name
        </label>
        <div class="col-sm-10">
            <InputText id="name" class="form-control" placeholder="Article Name"
                       @bind-Value="Input.Name" />
        </div>
    </div>
    <div class="form-group row">
        <label for="stock" class="col-sm-2 col-form-label">
            Email
        </label>
        <div class="col-sm-10">
            <InputNumber id="stock" class="form-control" placeholder="Stock"
                       @bind-Value="Input.Stock" />
        </div>
    </div>
</EditForm>