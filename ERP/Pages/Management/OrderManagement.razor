@page "/Management/Orders/Filter"
@attribute [Authorize(Roles = Roles.VIEW_ORDERS)]
@inject OrderService orderService
@inject NavigationManager navigationManager
@inject IJSRuntime JSRuntime

<h3>Order Filter</h3>
<hr />
<EditForm Model="Filter" OnValidSubmit="async () => await SendDataAsync()">
    <FluentValidationValidator Validator="Validator" />
    <div class="col-lg-6">
        <div class="form-group col-md-10">
            <label for="order-number">Order Number:</label>
            <InputText id="order-number" @bind-Value="Filter.OrderNumber" class="form-control" />
        </div>
        <div class="row">
            <div class="form-group col-md-4">
                <label for="weight">Weight:</label>
                <InputNumber id="weight" @bind-Value="Filter.Weight" class="form-control" />
            </div>
            <div class="form-group col-md-2">
                <label for="weight_condition"></label>
                <InputSelect id="weight_condition" @bind-Value="Filter.WeightOperator" class="form-control">
                    @for (int i = 0; i < ConditionFilter.NumberOperator.Count; i++)
                    {
                        <option value="@i">@ConditionFilter.NumberOperator[i]</option>
                    }
                </InputSelect>
            </div>
            @if (Filter.WeightOperator == 1)
            {
                <div class="form-group col-md-4">
                    <label for="weight_range"></label>
                    <InputNumber id="weight_range" @bind-Value="Filter.WeightRange" class="form-control" />
                </div>
            }
        </div>
        <div class="row">
            <div class="form-group col-md-4">
                <label for="length">Length:</label>
                <InputNumber id="length" @bind-Value="Filter.Length" class="form-control" />
            </div>
            <div class="form-group col-md-2">
                <label for="length_condition"></label>
                <InputSelect id="length_condition" @bind-Value="Filter.LengthOperator" class="form-control">
                    @for (int i = 0; i < ConditionFilter.NumberOperator.Count; i++)
                    {
                        <option value="@i">@ConditionFilter.NumberOperator[i]</option>
                    }
                </InputSelect>
            </div>
            @if (Filter.LengthOperator == 1)
            {
                <div class="form-group col-md-4">
                    <label for="length_range"></label>
                    <InputNumber id="length_range" @bind-Value="Filter.LengthRange" class="form-control" />
                </div>
            }
        </div>
        <div class="row">
            <div class="form-group col-md-4">
                <label for="inclusion_date">Inclusion Date:</label>
                <InputDate id="inclusion_date" @bind-Value="Filter.OrderDate" class="form-control" />
            </div>
            <div class="form-group col-md-2">
                <label for="inclusion_date_condition"></label>
                <InputSelect id="inclusion_date_condition" @bind-Value="Filter.OrderDateOperator" class="form-control">
                    @for (int i = 0; i < ConditionFilter.DateOperator.Count; i++)
                    {
                        <option value="@i">@ConditionFilter.DateOperator[i]</option>
                    }
                </InputSelect>
            </div>
            @if (Filter.OrderDateOperator == 1)
            {
                <div class="form-group col-md-4">
                    <label for="inclusion_date_range"></label>
                    <InputDate id="inclusion_date_range" @bind-Value="Filter.OrderDateRange" class="form-control" />
                </div>
            }
        </div>
        <div class="row">
            <div class="form-group col-md-4">
                <label for="inclusion_date">Inclusion Date:</label>
                <InputDate id="inclusion_date" @bind-Value="Filter.DeliveryDate" class="form-control" />
            </div>
            <div class="form-group col-md-2">
                <label for="inclusion_date_condition"></label>
                <InputSelect id="inclusion_date_condition" @bind-Value="Filter.DeliveryDateOperator" class="form-control">
                    @for (int i = 0; i < ConditionFilter.DateOperator.Count; i++)
                    {
                        <option value="@i">@ConditionFilter.DateOperator[i]</option>
                    }
                </InputSelect>
            </div>
            @if (Filter.DeliveryDateOperator == 1)
            {
                <div class="form-group col-md-4">
                    <label for="inclusion_date_range"></label>
                    <InputDate id="inclusion_date_range" @bind-Value="Filter.DeliveryDateRange" class="form-control" />
                </div>
            }
        </div>
        <div class="row">
            <div class="form-group col-md-4">
                <label for="inclusion_date">Inclusion Date:</label>
                <InputDate id="inclusion_date" @bind-Value="Filter.InvoiceDate" class="form-control" />
            </div>
            <div class="form-group col-md-2">
                <label for="inclusion_date_condition"></label>
                <InputSelect id="inclusion_date_condition" @bind-Value="Filter.InvoiceDateOperator" class="form-control">
                    @for (int i = 0; i < ConditionFilter.DateOperator.Count; i++)
                    {
                        <option value="@i">@ConditionFilter.DateOperator[i]</option>
                    }
                </InputSelect>
            </div>
            @if (Filter.InvoiceDateOperator == 1)
            {
                <div class="form-group col-md-4">
                    <label for="inclusion_date_range"></label>
                    <InputDate id="inclusion_date_range" @bind-Value="Filter.InvoiceDateRange" class="form-control" />
                </div>
            }
        </div>

        <div class="toolbar">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>

        <hr />
        <ValidationSummary />
    </div>
</EditForm>