@page "/Admin/Warehouses"
@page "/Admin/Warehouses/{Page:int}"
@inject WarehouseService warehouseService
@inject DbProviderService dbProviderService
@inject NavigationManager navigationManager


<div class="toolbar">
    <a role="button" class="btn btn-success" href=""><i class="fa-solid fa-plus"></i></a>
</div>

<div class="col-lg-3 col-sm-12 order-lg-3">
    <div class="card">
        <div class="card-header">
            <h4>Filter</h4>
        </div>
        <div class="card-content" style="padding: 0 1.3rem;">
            <EditForm Model="Filter" OnValidSubmit="async () => await LoadAsync(true)">
                <div class="form-floating mb-3">
                    <InputText @bind-Value="Filter.SearchPhrase" class="form-control" id="form-filter-searchphrase" placeholder="Suchbegriff" />
                    <label for="form-filter-searchphrase">Suchbegriff</label>
                </div>

                <div class="toolbar">
                    <button type="submit" class="btn btn-primary">Suchen</button>
                </div>

            </EditForm>
        </div>
    </div>
</div>
<div class="col-lg-9 col-sm-12">

    <div class="card">
        <div class="card-content">
            <!-- Table with no outer spacing -->
            <div class="table-responsive">
                <table class="table mb-0 table-lg">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Aktiv</th>
                            <th>Login erforderlich</th>
                            <th class="text-right">AKTION</th>
                        </tr>
                    </thead>
                    <tbody>
                        <Virtualize Items="Data" Context="item">
                            <tr>
                                <td>@item.WarehouseId</td>
                                <td>@item.Name</td>
                                <td>@item.Number</td>
                                <td>@item.SortNumber</td>
                                <td class="text-right">
                                    <a class="btn btn-primary" href="/Admin/Warehouses/@item.WarehouseId"><i class="fa-solid fa-edit"></i></a>
                                </td>
                            </tr>
                        </Virtualize>

                        @if (!Data.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center">Es wurden keine Formulare gefunden.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>